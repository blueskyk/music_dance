page {
  background-color: #000;
  color: #fff;
}
.top {
  position: relative;
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
}
.top .back {
  position: absolute;
  top: 50%;
  left: 40rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  font-size: 50rpx;
  color: #eee;
}
.top .title {
  font-size: 30rpx;
  color: #fff;
}
.name-box {
  padding: 0 30rpx;
}
.name-box .name {
  color: #ccc;
  font-size: 30rpx;
  margin: 20rpx 0;
}
.name-box .user-input .input-box {
  margin: 20rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.name-box .user-input .input-box input {
  width: 90%;
  color: #fff;
}
.name-box .user-input .input-box icon {
  color: #ccc;
}
.name-box .user-input .user-number {
  color: #999;
  font-size: 24rpx;
}
.name-box .user-input .save {
  margin: 0 auto;
  margin-top: 40rpx;
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #666;
  color: #fff;
  font-size: 30rpx;
}
.name-box .user-input textarea {
  width: 98%;
  margin: 0 auto;
  background-color: #333;
  color: #ccc;
}

