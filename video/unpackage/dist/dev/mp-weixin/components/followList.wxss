page {
  width: 100%;
  height: 100vh;
}
.followList {
  width: 100%;
  height: 100%;
  background-color: #000;
  padding-bottom: 100rpx;
  color: #fff;
}
.followList .item {
  height: 100%;
  padding: 0rpx 30rpx;
  position: relative;
}
.followList .item .top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 100rpx;
}
.followList .item .top .author-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.followList .item .top .author-box .author-img {
  width: 70rpx;
  height: 70rpx;
  overflow: hidden;
  -webkit-border-radius: 50%;
          border-radius: 50%;
}
.followList .item .top .author-box .author-img image {
  width: 100%;
  height: 100%;
}
.followList .item .top .author-box .author-name {
  margin-left: 20rpx;
}
.followList .item .top .share {
  font-size: 60rpx;
}
.followList .item .title {
  width: 100%;
  font-size: 30rpx;
  margin: 30rpx 0;
  height: 50rpx;
  line-height: 50rpx;
}
.followList .item .video-box {
  width: 100%;
  height: 700rpx;
  position: relative;
}
.followList .item .video-box video {
  width: 80%;
  height: 100%;
}
.followList .item .video-box .music-box {
  position: absolute;
  left: 0rpx;
  bottom: 10rpx;
  width: 40%;
  height: 40rpx;
  overflow: hidden;
}
.followList .item .video-box .music-box .music {
  margin-left: 10rpx;
  color: #FFFFFF;
  font-size: 30rpx;
  width: 100%;
  -webkit-animation: music 4s linear infinite;
          animation: music 4s linear infinite;
}
.followList .item .box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin: 40rpx 0;
}
.followList .item .box .date {
  color: #ccc;
  font-size: 36rpx;
}
.followList .item .box .share-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.followList .item .box .share-box .iconfont {
  margin: 0 10rpx;
  font-size: 30rpx;
}
.followList .item .comment-box .number {
  margin: 30rpx 0;
}
.followList .item .comment-box .comment {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.followList .item .comment-box .comment input {
  margin-left: 30rpx;
}
@-webkit-keyframes music {
0% {
    -webkit-transform: translate3d(80%, 0, 0);
            transform: translate3d(80%, 0, 0);
}
100% {
    -webkit-transform: translate3d(-80%, 0, 0);
            transform: translate3d(-80%, 0, 0);
}
}
@keyframes music {
0% {
    -webkit-transform: translate3d(80%, 0, 0);
            transform: translate3d(80%, 0, 0);
}
100% {
    -webkit-transform: translate3d(-80%, 0, 0);
            transform: translate3d(-80%, 0, 0);
}
}

