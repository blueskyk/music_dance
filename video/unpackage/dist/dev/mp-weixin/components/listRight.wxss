.listright {
  width: 100rpx;
  margin: 0 auto;
}
.listright .right-box {
  width: 100rpx;
  height: 100rpx;
  margin-top: 26rpx;
  text-align: center;
  color: #fff;
  font-size: 60rpx;
}
.listright .author-img {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  border: 3rpx solid #fff;
  -webkit-border-radius: 50%;
          border-radius: 50%;
}
.listright .author-img .author-wrap {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 30;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  overflow: hidden;
}
.listright .author-img .icon-jiahao {
  position: absolute;
  z-index: 30;
  left: 50%;
  bottom: -18rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 36rpx;
  height: 36rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  color: #fff;
  background-color: red;
  font-size: 20rpx;
}
.listright .around {
  width: 100rpx;
  height: 100rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  margin-top: 30rpx;
  overflow: hidden;
  -webkit-animation: rotate 1.5s  infinite linear;
          animation: rotate 1.5s  infinite linear;
}
.listright image {
  width: 100%;
  height: 100%;
}
.listright .number {
  font-size: 20rpx;
  text-align: center;
  color: #fff;
}
@-webkit-keyframes rotate {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
@keyframes rotate {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}

