page {
  width: 100%;
  height: 100%;
}
.bg {
  position: relative;
  width: 100%;
}
.bg image {
  width: 100%;
}
.top {
  width: 90%;
  padding: 0 30rpx;
  position: absolute;
  top: 290rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.top .user-box image {
  width: 160rpx;
  height: 160rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
}
.top .edit-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  text-align: right;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.top .edit-box .edit {
  margin-right: 10rpx;
  font-size: 32rpx;
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #3b3945;
}
.top .edit-box .add {
  width: 70rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #3b3945;
}
.fit {
  width: 100%;
  height: 100rpx;
}
.name-box {
  margin-top: 20rpx;
  padding: 0 30rpx;
}
.name-box .name {
  font-size: 64rpx;
  height: 100rpx;
  color: #fff;
}
.name-box .douId {
  font-size: 30rpx;
  color: #fff;
}
.info-box {
  margin: 30rpx 30rpx 0;
}
.info-box .tags {
  margin-top: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.info-box .tags .tag-item {
  font-size: 30rpx;
  color: #eee;
  padding: 10rpx;
  background-color: #333;
  margin-right: 20rpx;
}
.number-box {
  padding: 0 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 40rpx;
}
.number-box .number-item {
  margin-right: 20rpx;
}
.number-box .number-item .number {
  color: #fff;
  font-size: 28rpx;
}
.number-box .number-item .numbers {
  color: #999;
  font-size: 26rpx;
}
.add-box {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #666;
  margin: 0 auto;
  margin-top: 20rpx;
  font-size: 100rpx;
}
.option-box {
  margin: 20rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.option-box .option-item {
  font-size: 30rpx;
  text-align: center;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  color: #999;
}

